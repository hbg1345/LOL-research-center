<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:background="@drawable/backdrop_magic"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.notifications.NotificationsFragment">

            <!-- Existing TextViews and ProgressBar, adjust their constraints if needed -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:id="@+id/champInfoBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/champImg"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="16dp"
                            android:src="@drawable/ahri" />

                        <GridLayout
                            android:id="@+id/imageGrid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:columnCount="4"
                            app:layout_constraintStart_toEndOf="@+id/champImg"
                            app:layout_constraintTop_toTopOf="@+id/champImg">

                            <!-- Row 1: Image, Number, Image, Number -->
                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ad" />

                            <TextView
                                android:id="@+id/textView_ad"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:text="120"
                                android:textColor="@color/lol_on_surface"
                                android:textSize="20sp" />

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/ap" />

                            <TextView
                                android:id="@+id/textView_ap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:text="0"
                                android:textColor="@color/lol_on_surface"
                                android:textSize="20sp" />

                            <!-- Row 2: Image, Number, Image, Number -->
                            <ImageView
                                android:id="@+id/imageView7"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/as" />

                            <TextView
                                android:id="@+id/textView_as"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="20dp"
                                android:text="0"
                                android:textColor="@color/lol_on_surface"
                                android:textSize="20sp" />

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/mr" />

                            <TextView
                                android:id="@+id/textView_mr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="20dp"
                                android:text="0"
                                android:textColor="@color/lol_on_surface"
                                android:textSize="20sp" />

                            <!-- Row 3: Image, Number, Image, Number -->
                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/ar" />

                            <TextView
                                android:id="@+id/textView_ar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="20dp"
                                android:text="0"
                                android:textColor="@color/lol_on_surface"
                                android:textSize="20sp" />

                            <ImageView
                                android:id="@+id/imageView8"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/ms" />

                            <TextView
                                android:id="@+id/textView_ms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="20dp"
                                android:text="0"
                                android:textColor="@color/lol_on_surface"
                                android:textSize="20sp" />

                        </GridLayout>

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/healthBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="15dp"
                        android:max="100"
                        android:progress="100"
                        android:progressTint="#FF0000"
                        android:scaleY="4" />
<!--                    <TextView-->
<!--                        android:id="@+id/healthText"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="256"-->
<!--                        android:textAlignment="center"-->
<!--                        android:textColor="#FFFFFF"-->
<!--                        android:textSize="12sp"-->
<!--                        android:textStyle="bold"-->
<!--                        app:layout_constraintBottom_toBottomOf="@+id/healthBar"-->
<!--                        app:layout_constraintEnd_toEndOf="@+id/healthBar"-->
<!--                        app:layout_constraintStart_toStartOf="@+id/healthBar"-->
<!--                        app:layout_constraintTop_toTopOf="@+id/healthBar" />-->
                    <ProgressBar
                        android:id="@+id/manaBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginHorizontal="15dp"
                        android:max="100"
                        android:progress="50"
                        android:progressTint="#0000FF"
                        android:scaleY="4"
                        app:layout_constraintEnd_toEndOf="@+id/imageGrid"
                        app:layout_constraintStart_toStartOf="@+id/champImg"
                        app:layout_constraintTop_toBottomOf="@+id/healthBar" />

<!--                    <TextView-->
<!--                        android:id="@+id/manaText"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="50 / 100"-->
<!--                        android:textAlignment="center"-->
<!--                        android:textColor="#FFFFFF"-->
<!--                        android:textSize="12sp"-->
<!--                        android:textStyle="bold"-->
<!--                        app:layout_constraintBottom_toBottomOf="@+id/manaBar"-->
<!--                        app:layout_constraintEnd_toEndOf="@+id/manaBar"-->
<!--                        app:layout_constraintStart_toStartOf="@+id/manaBar"-->
<!--                        app:layout_constraintTop_toTopOf="@+id/manaBar" />-->


                </LinearLayout>



                <!--    &lt;!&ndash; Mana Bar &ndash;&gt;-->

                <!--    -->
                <!--    -->
                <!--    -->
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/lol_textpanel_bg"
                    android:padding="8dp"
                    android:text="TextView"
                    android:textColor="@color/lol_on_surface"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/champInfoBox" />

                <LinearLayout
                    android:id="@+id/skillLinear"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView">

                    <!-- 패시브(P) -->
                    <include
                        android:id="@+id/imageButton1"
                        layout="@layout/view_skill_icon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"

                        android:layout_marginEnd="2dp"
                        android:layout_weight="1" />

                    <!-- Q -->
                    <include
                        android:id="@+id/imageButton2"
                        layout="@layout/view_skill_icon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="1" />

                    <!-- W -->
                    <include
                        android:id="@+id/imageButton3"
                        layout="@layout/view_skill_icon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"

                        android:layout_marginEnd="2dp"
                        android:layout_weight="1" />

                    <!-- E -->
                    <include
                        android:id="@+id/imageButton4"
                        layout="@layout/view_skill_icon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"

                        android:layout_marginEnd="2dp"
                        android:layout_weight="1" />

                    <!-- R -->
                    <include
                        android:id="@+id/imageButton5"
                        layout="@layout/view_skill_icon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"

                        android:layout_marginEnd="2dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/lol_textpanel_bg"
                    android:padding="8dp"
                    android:text="이곳에 스킬 설명이 표시됩니다."

                    android:textColor="@color/lol_on_surface"
                    app:layout_constraintTop_toBottomOf="@+id/skillLinear" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>