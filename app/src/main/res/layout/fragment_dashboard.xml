<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <!-- 모든 아이템을 보여주는 RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/selected_items_container"/> <!-- 이 뷰의 하단은 아래 컨테이너의 상단에 고정 -->

    <!-- 하단에 고정될 선택된 아이템 및 버튼 컨테이너 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/selected_items_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"> <!-- 이 뷰의 하단은 부모의 하단에 고정 -->
        <!-- 상단 제약(constraintTop_toBottomOf)을 제거하여 순환 참조를 해결 -->


        <!-- 선택된 아이템을 보여주는 RecyclerView (2x3 그리드) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/selected_items_recycler_view"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintEnd_toStartOf="@+id/next_button"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:spanCount="3"
            tools:listitem="@layout/item_empty_grid" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음"
            app:layout_constraintBottom_toBottomOf="@+id/selected_items_recycler_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="0"
            app:layout_constraintStart_toEndOf="@+id/selected_items_recycler_view"
            app:layout_constraintTop_toTopOf="@+id/selected_items_recycler_view"
            app:layout_constraintVertical_bias="0.31" />

        <Button
            android:id="@+id/exitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나가기"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/next_button"
            app:layout_constraintStart_toStartOf="@+id/next_button"
            app:layout_constraintEnd_toEndOf="@+id/next_button"
            android:layout_marginTop="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>